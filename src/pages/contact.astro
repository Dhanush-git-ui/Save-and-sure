---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout title="Contact Us" description="Get in touch with Safe and Sure Projects for all your automation and material handling needs.">
  <div>
    <!-- Hero Section with Background for Navbar Visibility -->
    <div class="relative bg-primary-800 pt-24">
      <!-- 3D Particle Animation for Header -->
      <div id="header-animation" class="absolute inset-0 z-0 pointer-events-none"></div>

      <!-- Page Header -->
      <div class="bg-primary-800 text-white py-16 relative z-10">
        <div class="container mx-auto px-4 lg:px-8">
          <div class="max-w-3xl mx-auto text-center">
            <h1 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold mb-4 header-title">Contact Us</h1>
            <p class="text-primary-100 text-lg header-description">
              Have questions or ready to start a project? Reach out to our team for expert assistance.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Contact Information and Form -->
    <div class="py-16">
      <div class="container mx-auto px-4 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
          <!-- Contact Information -->
          <div>
            <h2 class="text-2xl font-heading font-semibold text-secondary-900 mb-6">Get In Touch</h2>
            <p class="text-secondary-600 mb-8">
              We'd love to hear from you. Contact us for more information about our services or to discuss your upcoming project.
            </p>

            <div class="space-y-6">
              <div class="flex items-start">
                <div class="bg-primary-100 rounded-full p-3 mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-medium text-secondary-900 mb-1">Office Address</h3>
                  <p class="text-secondary-600">
                    Plot No.16/7/3, Innovation Park Road No.7,<br>
                    IDA, Nacharam, Hyderabad,<br>
                    Telangana 500076
                  </p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="bg-primary-100 rounded-full p-3 mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-medium text-secondary-900 mb-1">Phone</h3>
                  <p class="text-secondary-600">
                    <a href="tel:+919948333318" class="hover:text-primary-600 transition-colors">+91-9948333318</a>
                  </p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="bg-primary-100 rounded-full p-3 mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-medium text-secondary-900 mb-1">Email</h3>
                  <p class="text-secondary-600">
                    <a href="mailto:marketing@safeandsureprojects.com" class="hover:text-primary-600 transition-colors">marketing@safeandsureprojects.com</a>
                  </p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="bg-primary-100 rounded-full p-3 mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-medium text-secondary-900 mb-1">Business Hours</h3>
                  <p class="text-secondary-600">
                    Monday - Friday: 9:00 AM - 6:00 PM<br>
                    Saturday: 9:00 AM - 1:00 PM<br>
                    Sunday: Closed
                  </p>
                </div>
              </div>

              <div class="pt-4">
                <h3 class="text-lg font-medium text-secondary-900 mb-3">Connect With Us</h3>
                <div class="flex space-x-4">
                  <a href="#" class="bg-secondary-100 hover:bg-secondary-200 text-secondary-600 hover:text-secondary-800 p-3 rounded-full transition-colors">
                    <span class="sr-only">LinkedIn</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
