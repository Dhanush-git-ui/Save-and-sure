---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';

const clients = [
  {
    name: "Nagarjuna Cement",
    industry: "Cement Manufacturing",
    solutions: [
      "Plant automation",
      "Control panels",
      "SCADA implementation"
    ]
  },
  {
    name: "JSW Cement",
    industry: "Cement Manufacturing",
    solutions: [
      "Material handling automation",
      "Process control systems",
      "Power distribution"
    ]
  },
  {
    name: "Orient Cement",
    industry: "Cement Manufacturing",
    solutions: [
      "Production automation",
      "Quality control systems",
      "Electrical panels"
    ]
  },
  {
    name: "Tech Mahindra",
    industry: "Information Technology",
    solutions: [
      "Facility automation",
      "Building management",
      "Power control"
    ]
  },
  {
    name: "Cellutech Industries",
    industry: "Manufacturing",
    solutions: [
      "Process automation",
      "Control systems",
      "Material handling"
    ]
  }
];

const testimonials = [
  {
    quote: "Safe and Sure helped us automate our power plant controls seamlessly. Their team was professional, responsive, and delivered on time. Our plant efficiency has greatly improved.",
    author: "Plant Manager",
    company: "Nagarjuna Cement"
  },
  {
    quote: "The custom PLC solution from Safe and Sure Projects was exactly what we needed. It reduced our setup time by half and eliminated costly errors. Excellent support throughout the project!",
    author: "Operations Head",
    company: "JSW Cement"
  },
  {
    quote: "Highly recommend Safe and Sure Projects â€“ they designed a sophisticated weighing and batching system for us. The accuracy is outstanding and the staff provided thorough training.",
    author: "Production Engineer",
    company: "Cellutech Industries"
  }
];
---

<Layout title="Clients" description="Learn about our valued clients and their success stories with Safe and Sure Projects.">
  <div>
    <PageHeader
      title="Our Clients"
      description="Trusted by leading companies across India for automation excellence."
    />

    <!-- Client Grid -->
    <div class="py-16 bg-white">
      <div class="container mx-auto px-4 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {clients.map(client => (
            <div class="bg-white p-6 rounded-lg shadow-md border border-secondary-100 service-card">
              <h2 class="text-xl font-heading font-semibold text-secondary-900 mb-2">{client.name}</h2>
              <p class="text-primary-600 text-sm font-medium mb-4">{client.industry}</p>

              <h3 class="text-sm font-medium text-secondary-900 mb-2">Solutions Provided:</h3>
              <ul class="space-y-2">
                {client.solutions.map(solution => (
                  <li class="flex items-center text-secondary-600 text-sm">
                    <span class="w-1.5 h-1.5 bg-primary-500 rounded-full mr-2"></span>
                    {solution}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Testimonials -->
    <div class="py-16 bg-primary-50">
      <div class="container mx-auto px-4 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-2xl font-heading font-semibold text-secondary-900 mb-4">Client Testimonials</h2>
          <p class="text-secondary-600 max-w-2xl mx-auto">
            Don't just take our word for it. Here's what our clients have to say about working with Safe and Sure Projects.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
          {testimonials.map(testimonial => (
            <div class="bg-white p-6 rounded-lg shadow-md service-card">
              <svg class="w-8 h-8 text-primary-500 mb-4" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
              </svg>
              <p class="text-secondary-600 italic mb-6">{testimonial.quote}</p>
              <div>
                <p class="font-medium text-secondary-900">{testimonial.author}</p>
                <p class="text-primary-600 text-sm">{testimonial.company}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Pan India Presence -->
    <div class="py-16 bg-white">
      <div class="container mx-auto px-4 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-2xl font-heading font-semibold text-secondary-900 mb-4">Our Pan India Presence</h2>
          <p class="text-secondary-600 max-w-2xl mx-auto">
            We serve clients across all major industrial hubs in India, providing local support and expertise.
          </p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-4xl mx-auto">
          {[
            "Hyderabad",
            "Mumbai",
            "Pune",
            "Chennai",
            "Bangalore",
            "Kolkata",
            "Delhi NCR",
            "Ahmedabad"
          ].map(city => (
            <div class="bg-primary-50 p-4 rounded-lg text-center">
              <p class="text-secondary-900 font-medium">{city}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</Layout>