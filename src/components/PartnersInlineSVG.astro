---

<section class="py-16 bg-white relative">
  <!-- 3D Animation Background -->
  <div id="partners-animation" class="absolute inset-0 z-0 pointer-events-none opacity-30"></div>

  <div class="container mx-auto px-4 lg:px-8 relative z-10">
    <div class="text-center mb-12">
      <span class="inline-block py-1 px-3 rounded-full text-xs font-medium bg-primary-100 text-primary-800 mb-4">Technology Partners</span>
      <h2 class="text-3xl font-heading font-bold text-secondary-900 mb-4">Our Global Partners</h2>
      <p class="max-w-2xl mx-auto text-secondary-600">
        We collaborate with leading global technology companies to ensure best-in-class solutions for our clients.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 max-w-4xl mx-auto">
      {partners.map(partner => (
        <div class="p-6 bg-white shadow-sm rounded-lg hover:shadow-md transition-all duration-300 hover:scale-105 text-center border-l border-gray-200 flex flex-col items-center">
          <div class="mb-3" set:html={partner.icon} />
          <h3 class="text-lg font-medium text-primary-600">{partner.name}</h3>
        </div>
      ))}
    </div>
  </div>
</section>
