---
const services = [
  {
    icon: "electrical-panel",
    title: "Electrical & Control Panels",
    description: "Custom-designed panels (MCC, VFD, BMS, PCC, etc.) that ensure safe, efficient power distribution for industrial operations.",
    link: "/services#electrical-panels"
  },
  {
    icon: "automation",
    title: "Automation Solutions",
    description: "Advanced PLC and SCADA systems from Siemens, ABB, Schneider, and Allen-Bradley to automate plant operations for maximum efficiency.",
    link: "/services#automation"
  },
  {
    icon: "engineering",
    title: "Engineering Services",
    description: "End-to-end electrical engineering from schematics and control logic to commissioning and maintenance for complex industrial projects.",
    link: "/services#engineering"
  },
  {
    icon: "material-handling",
    title: "Material Handling Systems",
    description: "Bespoke automation for bulk material flow, including conveyor controls, load feeders, and system integration to optimize material movement.",
    link: "/services#material-handling"
  },
  {
    icon: "weighing",
    title: "High-Precision Weighing",
    description: "Integration of Mettler-Toledo load cells and controllers for highly accurate weighing systems in critical dosing applications.",
    link: "/services#weighing"
  }
];

const getIcon = (icon) => {
  switch(icon) {
    case "electrical-panel":
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
              </svg>`;
    case "automation":
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>`;
    case "engineering":
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>`;
    case "material-handling":
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2" />
              </svg>`;
    case "weighing":
      return `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
              </svg>`;
    default:
      return '';
  }
};
---

<section id="services" class="section-padding bg-white py-20">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="text-center mb-16">
      <span class="inline-block py-1 px-3 rounded-full text-xs font-medium bg-primary-100 text-primary-800 mb-4">Our Expertise</span>
      <h2 class="text-3xl md:text-4xl font-heading font-bold text-secondary-900 mb-4">Comprehensive Automation Solutions</h2>
      <p class="max-w-2xl mx-auto text-secondary-600">
        We specialize in seamlessly integrating cutting-edge hardware and software to create automation systems that enhance efficiency, safety, and productivity.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div 
          class="bg-white border border-secondary-100 rounded-lg shadow-custom overflow-hidden transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <div class="bg-primary-50 p-6">
            <div class="w-14 h-14 rounded-full bg-primary-600 flex items-center justify-center text-white mb-4">
              <Fragment set:html={getIcon(service.icon)} />
            </div>
            <h3 class="text-xl font-heading font-semibold text-secondary-900 mb-2">{service.title}</h3>
            <p class="text-secondary-600 mb-4">{service.description}</p>
            <a 
              href={service.link} 
              class="inline-flex items-center text-primary-600 hover:text-primary-700 font-medium transition-colors"
            >
              Learn More
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>