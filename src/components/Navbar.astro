---
const navLinks = [
  { name: "Home", url: "/" },
  { name: "About", url: "/about" },
  { name: "Services", url: "/services" },
  { name: "Industries", url: "/industries" },
  { name: "Projects", url: "/projects" },
  { name: "Clients", url: "/clients" },
  { name: "Contact", url: "/contact" },
  { name: "Careers", url: "/careers" },
];
---

<header
  x-data="{
    isOpen: false,
    isScrolled: false,
    init() {
      window.addEventListener('scroll', () => {
        this.isScrolled = window.scrollY > 10
      })
    }
  }"
  :class="isScrolled ? 'bg-primary-800 shadow-md py-2' : 'bg-primary-800/90 py-4'"
  class="fixed w-full top-0 left-0 right-0 transition-all duration-300 z-50"
>
  <div class="container mx-auto px-4 lg:px-8">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <span class="text-white font-heading font-bold text-2xl md:text-3xl">
          Safe<span class="text-accent-500">&</span>Sure
        </span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex space-x-8">
        {navLinks.map((link) => (
          <a
            href={link.url}
            class="text-white hover:text-accent-300 font-medium transition-colors duration-200"
          >
            {link.name}
          </a>
        ))}
      </nav>

      <!-- Mobile Menu Button -->
      <button
        @click="isOpen = !isOpen"
        class="lg:hidden flex items-center text-white p-2"
        aria-label="Toggle Menu"
      >
        <svg
          x-show="!isOpen"
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg
          x-show="isOpen"
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          style="display: none;"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation Menu -->
  <div
    x-show="isOpen"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0 transform -translate-y-4"
    x-transition:enter-end="opacity-100 transform translate-y-0"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100 transform translate-y-0"
    x-transition:leave-end="opacity-0 transform -translate-y-4"
    class="lg:hidden bg-primary-800 shadow-lg absolute top-full left-0 right-0"
    style="display: none;"
  >
    <div class="container mx-auto px-4 py-3">
      <nav class="flex flex-col space-y-3">
        {navLinks.map((link) => (
          <a
            href={link.url}
            class="py-2 px-4 text-white hover:bg-primary-700 hover:text-accent-300 rounded-md transition-colors duration-200"
            @click="isOpen = false"
          >
            {link.name}
          </a>
        ))}
        <a
          href="https://wa.me/919948333318"
          class="py-2 px-4 mt-2 bg-accent-500 text-white rounded-md text-center hover:bg-accent-600 transition-colors duration-200"
          target="_blank"
        >
          <div class="flex items-center justify-center">
            <svg class="w-5 h-5 mr-2" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Chat on WhatsApp
          </div>
        </a>
      </nav>
    </div>
  </div>
</header>